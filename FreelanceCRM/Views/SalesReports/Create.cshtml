@model FreelanceCRM.Models.SalesReport

@{
    ViewData["Title"] = "Create Sales Report";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Add New Sales Report</h2>

    <form asp-action="Create" class="bg-light p-4 rounded shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-semibold"></label>
            <input asp-for="Description" class="form-control" placeholder="Enter sales description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label fw-semibold"></label>
            <input asp-for="Amount" class="form-control" placeholder="Enter amount in ₹" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Date" class="form-label fw-semibold"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success rounded-pill px-4">Save</button>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 ms-2">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
