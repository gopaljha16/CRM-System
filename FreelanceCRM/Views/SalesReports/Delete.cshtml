@model FreelanceCRM.Models.SalesReport

@{
    ViewData["Title"] = "Delete Sales Report";
}

<div class="container py-4">
    <h2 class="fw-bold text-danger mb-3">Delete Sales Report</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this sales report for <strong>@Model.Description</strong> dated <strong>@Model.Date.ToString("dd MMM yyyy")</strong>?
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger rounded-pill px-4">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 ms-2">Cancel</a>
    </form>
</div>
