@model FreelanceCRM.Models.SalesReport

@{
    ViewData["Title"] = "Sales Report Details";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Sales Report Details</h2>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-semibold">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3 fw-semibold">Amount</dt>
            <dd class="col-sm-9">₹ @Model.Amount.ToString("N2")</dd>

            <dt class="col-sm-3 fw-semibold">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd MMM yyyy")</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill px-4">Edit</a>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 ms-2">Back to List</a>
        </div>
    </div>
</div>
