@model FreelanceCRM.Models.Contact

@{
    ViewData["Title"] = "Add New Contact";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Add New Contact</h2>

    <form asp-action="Create" class="bg-light p-4 rounded shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="FullName" class="form-label fw-semibold"></label>
            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-semibold"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label fw-semibold"></label>
            <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Company" class="form-label fw-semibold"></label>
            <input asp-for="Company" class="form-control" placeholder="Enter company name" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label fw-semibold"></label>
            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes..."></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success rounded-pill px-4">Create Contact</button>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 ms-2">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
