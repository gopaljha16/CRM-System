@model FreelanceCRM.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<div class="container py-4">
    <h2 class="fw-bold text-danger mb-3">Delete Contact</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete <strong>@Model.FullName</strong>?
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <button type="submit" class="btn btn-danger rounded-pill px-4">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 ms-2">Cancel</a>
        </div>
    </form>
</div>
