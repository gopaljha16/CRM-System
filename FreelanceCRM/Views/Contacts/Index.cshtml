@model IEnumerable<FreelanceCRM.Models.Contact>

@{
    ViewData["Title"] = "Contacts List";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Contact Directory</h2>
        <a class="btn btn-primary rounded-pill px-4" asp-action="Create">+ Add Contact</a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">@item.FullName</h5>
                        <p class="card-text mb-1"><strong>Email:</strong> @item.Email</p>
                        <p class="card-text mb-1"><strong>Phone:</strong> @item.Phone</p>
                        <p class="card-text"><strong>Company:</strong> @item.Company</p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
