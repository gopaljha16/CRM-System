@model FreelanceCRM.Models.Lead

@{
    ViewData["Title"] = "Lead Details";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Lead Details</h2>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-semibold">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-semibold">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-semibold">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3 fw-semibold">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3 fw-semibold">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd MMM yyyy")</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill px-4">Edit</a>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 ms-2">Back to List</a>
        </div>
    </div>
</div>
