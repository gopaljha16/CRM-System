@model FreelanceCRM.Models.Lead

@{
    ViewData["Title"] = "Create Lead";
}

<div class="container py-4">
    <h2 class="fw-bold mb-3">Add New Lead</h2>

    <form asp-action="Create" class="bg-light p-4 rounded shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-semibold"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label fw-semibold"></label>
            <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label fw-semibold"></label>
            <input asp-for="Status" class="form-control" placeholder="Lead status (New, Contacted, Closed)" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success rounded-pill px-4">Save Lead</button>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 ms-2">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
